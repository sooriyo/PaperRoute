<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/nameTextView"
            android:textColor="#3D446A"
            android:paddingStart="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscriber Name"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/addressTextView"
            android:paddingStart="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTextView"
            android:text="Address"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cityTextView"
            android:paddingStart="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressTextView"
            android:text="City"
            android:layout_marginBottom="3dp"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/phoneTextView"
            android:paddingStart="7dp"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityTextView"
            android:text="Phone"
            android:textSize="14sp" />

        <Button
            android:id="@+id/directionButton"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#448AFF"
            android:text="Direction"
            android:layout_width="110dp"
            android:layout_height="40dp"
            />

        <Button
            android:id="@+id/deliverdButton"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_below="@id/directionButton"
            android:backgroundTint="#938F8F"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="12dp"
            android:text=" Deliverd " />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
